
    <% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br/>
    <h3>Edit  listing </h3>
    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" 
        novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="mb-3"> 
            <label for="title" class="form-label"> Title </label>
            <input name="listing[title]" 
            class="form-control" value="<%= listing.title%>"
            required type="text"/>
            <div class="invalid-feedback">Please enter valid title </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label"> Description </label>
             <textarea name="listing[description]" 
             required class="form-control" type="text"> <%= listing.description%> </textarea>
             <div class="invalid-feedback">Please enter valid description</div>
        </div>
       
          <!--preview of image before editing -->
          <div class="mb-3">
            Original Listing image 
            <img src="<%=originalImageUrl%> " />
          </div>

       <div class="mb-3"> 
         <label for="image" class="form-label">New Image link</label>
        <input name="listing[image]" 
         class="form-control" type="file"/>
       </div>
       
            <!--value="< %= listing.image % >" -->

       <div class="row">
             <div class="mb-3 col-md-4">
        <label for="price" class="form-label"> Price </label>
             <input name="listing[price]"
             required class="form-control" value="<%= listing.price%>" type="number"/>
             <div class="invalid-feedback">Please enter valid price</div>
       </div>

         <div class="mb-3 col-md-8">
         <label for="country" class="form-label"> Country </label>
         <input name="listing[country]"
         required  class="form-control" value="<%= listing.country%>"  type="text"/>
         <div class="invalid-feedback">Please enter valid country</div>
       </div>
       

       </div>

      
       
       <div class="mb-3">
         <label for="location" class="form-label"> Location </label>
             <input name="listing[location]" 
             required class="form-control" value="<%= listing.location%>" type="text"/>
             <div class="invalid-feedback">Please enter valid location</div>
       </div>
       
      
      
        <button class="btn btn-dark edit-btn mt-3"> EDIT </button>
    </form>
    </div>
    </div>
   